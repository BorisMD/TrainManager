@model TrainManager.BindingModels.Train.CreateBindingModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">Create Line</h4>
<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/Train/Make" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="display: none">
                <input name="Id" value="@Model.Id" />
            </div>
            <div class="form-group">
                <input asp-for="Name" class="form-control common-input mt-20" placeholder="First Name*" onfocus="this.placeholder = ''" onblur="this.placeholder = 'First Name*'" required />
                <span asp-validation-for="Name" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input asp-for="Capacity" class="form-control common-input mt-20" placeholder="Second Name*" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Second Name*'" required />
                <span asp-validation-for="Capacity" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input asp-for="Fast" class="form-control common-input mt-20" placeholder="Last Name*" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Last Name*'" required />
                <span asp-validation-for="Fast" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Make" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
