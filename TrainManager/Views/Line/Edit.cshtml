@model TrainManager.ViewModels.Line.DetailsViewModel
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Edit Line</h1>
        <form method="post" action="/Line/Edit">
            <div>
                <div class="form-group" style="display: none">
                    <input type="text" class="form-control" id="id" name="Id" value="@Model.Id">
                </div>
                <div class="form-group">
                    <label for="from">From</label>
                    <input type="text" class="form-control" id="from" name="From" value="@Model.From">
                </div>
                <div class="form-group">
                    <label for="to">To</label>
                    <input type="text" class="form-control" id="to" name="To" value="@Model.To">
                </div>
                <div class="form-group">
                    <label for="departureTime">Departure Time</label>
                    <input type="text" class="form-control" id="departureTime" name="DepartureTime" value="@Model.DepartureTime">
                </div>
                <div class="form-group">
                    <label for="arrivalTime">Arrival Time</label>
                    <input type="text" class="form-control" id="arrivalTime" name="ArrivalTime" value="@Model.ArrivalTime">
                </div>
                <div class="form-group">
                    <label for="arrivalTime">Date</label>
                    <input type="text" class="form-control" id="arrivalTime" name="ArrivalTime" value="@Model.Date">
                </div>
                <div class="form-group text-center">
                    @if (User.IsInRole("Admin"))
                    {
                        <button type="submit" class="btn btn-primary">Edit</button>
                    }
                </div>
            </div>
        </form>

    </div>
</section>
