@model TrainManager.BindingModels.Line.Input

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">Create Line</h4>
<hr />
<div class="row">
    <div class="col-md-6 mx-auto">
        <form action="/Line/Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="From" class="form-control common-input mt-20" placeholder="From" onfocus="this.placeholder = ''" onblur="this.placeholder = 'From*'" required />
                <span asp-validation-for="From" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input asp-for="To" class="form-control common-input mt-20" placeholder="To" onfocus="this.placeholder = ''" onblur="this.placeholder = 'To*'" required />
                <span asp-validation-for="To" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input asp-for="DepartureTime" class="form-control common-input mt-20" placeholder="Departure Time - MM/dd/yyyy hh::mm" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Departure Time - MM/dd/yyyy hh::mm'" required />
                <span asp-validation-for="DepartureTime" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input asp-for="ArrivalTime" class="form-control common-input mt-20" placeholder="Arrival Time - MM/dd/yyyy hh::mm" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Arrival Time - MM/dd/yyyy hh::mm'" required />
                <span asp-validation-for="ArrivalTime" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input asp-for="Date" class="form-control common-input mt-20" placeholder="Arrival Time - MM/dd/yyyy hh::mm" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Date - MM/dd/yyyy hh::mm'" required />
                <span asp-validation-for="Date" class="text-dark"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
